@model CustomerModel

@{
	var exists = Model != null && Model.IdCustomer != 0;
	ViewBag.Title = (exists ? "Редактирование" : "Создание") + " Customer";
}

<form asp-action="Update" asp-antiforgery="true" method="post">
	<div class="row">
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="IdCustomer"></label>
				<input type="text" asp-for="IdCustomer" class="form-control"/>
				<span asp-validation-for="IdCustomer" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="CustomerName"></label>
				<input type="text" asp-for="CustomerName" class="form-control"/>
				<span asp-validation-for="CustomerName" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="CustomerSex"></label>
				<input type="text" asp-for="CustomerSex" class="form-control"/>
				<span asp-validation-for="CustomerSex" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="CustomerAge"></label>
				<input type="text" asp-for="CustomerAge" class="form-control"/>
				<span asp-validation-for="CustomerAge" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<button class="btn btn-outline-primary" type="submit">@(exists ? "Сохранить" : "Добавить")</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
		</div>
	</div>
</form>
